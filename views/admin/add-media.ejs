<%- include('../includes/first-part.ejs') %>
    <link rel="stylesheet" href="/css/table.css" />
  </head>
  <body>
    <%- include('../includes/header.ejs') %>

    <div class="container">
      <%- include('../includes/nav.ejs') %>
      <main>
        <h3> ➣&nbsp&nbsp<%= menuTitle %></h3>
        <hr />
        <form action="/admin/add-media" method="POST">
          <section class="h-part">
            <table id="cam-table">
              <tr>
                <td class="h-header">매체사</td>
                <td>
                  <input type="text" name="name">
                </td>
                <td class="h-header">인터랩</td>
                <td >
                  <select name="inter_type" id="inter_type">
                    <option value="">해당없음</option>
                    <option value="in">in</option>
                    <option value="out">out</option>
                  </select>
                  <input type="hidden" name="inter_name" id="inter_name"/>
                </td>
              </tr>
            <tr>
                <td class="h-header">디플랜 결제조건</td>
                <td>
                  <input type="text" name="pay_condition">
                </td>
                <td class="h-header">계산서 발행</td>
                <td>
                  구분:
                  <select name="bill_type">
                    <option value="">해당없음</option>
                    <option value="전액">전액</option>
                    <option value="순액">순액</option>
                  </select>
                  &nbsp&nbsp
                  발행처:    
                  <input type="text" name="bill_publisher">
                </td>

                </td>
              </tr>
              <tr>
                <td class="h-header">매체제공 수수료율</td>
                <td>
                  <input class="input-num" type="text" name="provide_fee_rate" size="4"/>%
                </td>
                <td class="h-header">수수료율</td>
                <td >
                  대행사:<input class="input-num" type="text" name="agency_fee_rate" placeholder="00" size="3"/>%&nbsp&nbsp/&nbsp&nbsp
                  매체:<input class="input-num" type="text" name="media_fee_rate" placeholder="00" size="3"/>%&nbsp&nbsp/&nbsp&nbsp
                  디플랜:<input class="input-num" type="text" name="dplan_fee_rate" placeholder="00" size="3"/>%&nbsp&nbsp/&nbsp&nbsp
                  인터랩:<input class="input-num" type="text" name="inter_fee_rate" placeholder="00" size="3"/>%
                </td>
                
              </tr>
              <tr>
                <td class="h-header">비고</td>
                <td colspan="3">
                  <textarea name="memo"></textarea>
                </td>
              </tr>
            </table>
            <div class="submit-btns">
              <button type="submit">매체추가</button>
              <a href="/admin" ><button>취소</button></a>
            </div>
          </section>
        </form>
        </main>
        <script src="/js/admin/add-media.js"></script>
    </div>

  <%- include('../includes/end-part.ejs') %>
